{
  "compilerOptions": {
    "types": ["node"],
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@ffx/*": ["./*"] // ðŸ‘ˆ this line is the magic: lets TS resolve from repo root
    }
  },
  "include": [
    "src",
    "components",
    "integrations",
    "layouts",
    "starters",
    "archetypes",
    "docs",
    "types",
    "hooks",
    "services"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
